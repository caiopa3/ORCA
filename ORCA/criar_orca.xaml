<Window x:Class="ORCA.criar_orca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="criar_orca" Height="450" Width="800">
    
    <Grid>

        <StackPanel Margin="10,10,10,10">

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

                <Button Content="Adicionar Coluna" Click="AdicionarColuna_Click" Width="120"/>
                <Button Content="Salvar Modelo" Click="SalvarModelo_Click" Width="120" Margin="5,0"/>

            </StackPanel>

            <DataGrid x:Name="meuDataGrid" AutoGenerateColumns="False" CanUserAddRows="True"/>

        </StackPanel>

    </Grid>
</Window>
