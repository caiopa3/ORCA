<Window x:Class="ORCA.criar_orca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="criar_orca" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="0,0,0,10"
                  CanUserAddRows="False" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <StackPanel Margin="10">
                    <Button x:Name="btnAdicionarLinha" Content="Adicionar Linha" Click="AdicionarLinha_Click" Width="120"/>
                    <TextBox x:Name="txtNomeLinha" Width="120" Margin="0,5,0,0" TextChanged="txtNomeLinha_TextChanged" />
                </StackPanel>
                <StackPanel Margin="10">
                    <Button x:Name="btnAdicionarColuna" Content="Adicionar Coluna" Click="AdicionarColuna_Click" Width="120"/>
                    <TextBox x:Name="txtNomeColuna" Width="120" Margin="0,5,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
