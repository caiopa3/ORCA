<Window x:Class="ORCA.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Width="341"
        Height="185"
        AllowsTransparency="True"
        Opacity="0.98"
        ShowInTaskbar="False">

    <Border CornerRadius="14" Background="#0D1113" BorderBrush="#fff8ef" BorderThickness="1.4" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock x:Name="txtTitle"
                       Text="Mensagem"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#fff8ef"
                       Margin="0,0,0,8"/>

            <!-- Corpo -->
            <TextBlock x:Name="txtMessage"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="#FFF8EF"
                       Margin="0,4,0,16"
                       VerticalAlignment="Center"/>

            <!-- Botões -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="btnOk"
                        Content="OK"
                        Width="80"
                        Height="32"
                        Margin="0,0,8,0"
                        Cursor="Hand"
                        Click="BtnOk_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="14"
                                    BorderThickness="1.4"
                                    BorderBrush="#fff8ef"
                                    Background="Transparent"
                                    Padding="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#fff8ef"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Foreground>
                        <SolidColorBrush Color="#fff8ef"/>
                    </Button.Foreground>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
