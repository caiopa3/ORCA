<Window x:Class="ORCA.OrcamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orçamento" 
        Height="500" 
        Width="900"
        Background="#fff8ef"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Linha para o botão -->
            <RowDefinition Height="*"/>
            <!-- Linha para o DataGrid -->
        </Grid.RowDefinitions>

        <!-- Botão de salvar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnSalvar"
                    Content="💾 Salvar Orçamento"
                    Padding="10,5"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Width="160"
                    Height="35"
                    HorizontalAlignment="Left"
                    Click="BtnSalvar_Click"/>
        </StackPanel>

        <!-- Card para o DataGrid -->
        <Border Grid.Row="1"
                Background="#0d1216"
                CornerRadius="15"
                Padding="15"
                Margin="0,0,0,0">

            <DataGrid x:Name="dataGridOrcamento"
                      AutoGenerateColumns="True"
                      CanUserAddRows="True"
                      Background="#fff8ef"
                      RowBackground="#2D2D30"
                      AlternatingRowBackground="#3E3E42"
                      Foreground="#fff8ef"
                      GridLinesVisibility="None"
                      HorizontalGridLinesBrush="#3E3E42"
                      VerticalGridLinesBrush="#3E3E42"
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      FontSize="14"
                      SelectionMode="Single"
                      CanUserResizeColumns="True"
                      CanUserResizeRows="False">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="#fff8ef"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.Resources>

            </DataGrid>
        </Border>

    </Grid>
</Window>
