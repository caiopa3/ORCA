<Window x:Class="ORCA.OrcamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orçamento" 
        Height="500" 
        Width="900"
        Background="#fff8ef"
        WindowStartupLocation="CenterScreen">
    
    <Grid>

        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="889*"/>
            
        </Grid.ColumnDefinitions>

        <!-- Card para o DataGrid -->
        
        <Border Background="#0d1216" CornerRadius="15" Padding="15" Margin="10,10,10,10" Grid.ColumnSpan="2">
            
            <DataGrid x:Name="dataGridOrcamento"
                      AutoGenerateColumns="True"
                      CanUserAddRows="True"
                      Background="#fff8ef"
                      RowBackground="#2D2D30"
                      AlternatingRowBackground="#3E3E42"
                      Foreground="#fff8ef"
                      GridLinesVisibility="None"
                      HorizontalGridLinesBrush="#3E3E42"
                      VerticalGridLinesBrush="#3E3E42"
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      FontSize="14"
                      SelectionMode="Single"
                      CanUserResizeColumns="True"
                      CanUserResizeRows="False">
                
                <DataGrid.Resources>
                    
                    <Style TargetType="DataGridColumnHeader">
                        
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="#fff8ef"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        
                    </Style>
                    
                </DataGrid.Resources>
                
            </DataGrid>
            
        </Border>

    </Grid>
    
</Window>