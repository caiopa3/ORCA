<Window x:Class="ORCA.OrcamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orçamento" 
        Height="500" 
        Width="900"
        Background="#0d1216"
        WindowStartupLocation="CenterScreen"
            ResizeMode="NoResize"
    >

    <Window.Resources>
        <!-- Estilo do botão voltar -->
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#fff8ef"/>
            <Setter Property="Foreground" Value="#0d1216"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="80" Margin="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="24" Margin="0,4,0,3">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Path Data="M10,0 L0,10 L10,20"
                              Margin="4.5,0,0,0"
                              StrokeThickness="2"
                              Stretch="Fill" Width="14" Height="14" Stroke="#FF0D1216"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="573*"/>
            <ColumnDefinition Width="307*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="250*"/>
        </Grid.RowDefinitions>

        <!-- Painel de botões -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,28,5" Grid.ColumnSpan="2">

            <!-- Botão Salvar -->
            <Button x:Name="btnSalvar"
                    Content="Salvar Orçamento"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnSalvar_Click"
                    Margin="0,0,10,0"
                    Width="140"
                    Height="31">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="#007ACC">
                            <ContentPresenter x:Name="content"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#fff8ef"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#007ACC"
                                                            Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="content"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="Transparent"
                                                            Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="content"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="#007ACC"
                                                            Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005f99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Botão Exportar -->
            <Button x:Name="btnExportar"
                    Content="Exportar PDF"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnExportar_Click"
                    Width="140"
                    Height="31">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="#00B050">
                            <ContentPresenter x:Name="content"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#fff8ef"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#00B050"
                                                            Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="content"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="Transparent"
                                                            Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="content"
                                                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                            To="#00B050"
                                                            Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Pressionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#007A3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

        <!-- Fundo do DataGrid -->
        <Border Background="#fff8ef"
                CornerRadius="15"
                Padding="15" 
                Margin="21,0,21,11" 
                Grid.RowSpan="3" 
                Grid.Row="1" Grid.ColumnSpan="2"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dataGridOrcamento"
                  AutoGenerateColumns="True"
                  CanUserAddRows="True"
                  Background="#fff8ef"
                  Foreground="#000000"
                  GridLinesVisibility="None"
                  FontSize="14"
                  SelectionMode="Single"
                  CanUserResizeColumns="True"
                  CanUserResizeRows="False"
                  Margin="25,6,25,23"
                  Grid.Row="2"
                  Grid.RowSpan="2" Grid.ColumnSpan="2">

            <DataGrid.Resources>
                <!-- Cabeçalhos -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="#fff8ef"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>

                <!-- Estilo para células com quebra de linha e limite de largura -->
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap" />
                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                    <Setter Property="MaxWidth" Value="250"/>
                    <!-- largura máxima antes de quebrar -->
                </Style>

                <!-- Estilo aplicado às células -->
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                    <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                    <Setter Property="TextBlock.MaxWidth" Value="250"/>
                    <!-- ajuste conforme desejado -->
                    <Setter Property="VerticalAlignment" Value="Top" />
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Button x:Name="btnVoltar"
        Style="{StaticResource VoltarButtonStyle}"
        Click="btnVoltar_Click"
        VerticalAlignment="Top"
        Margin="21,22,0,0"
        Width="34" Height="30"/>

    </Grid>
</Window>
