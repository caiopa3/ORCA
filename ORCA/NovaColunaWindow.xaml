<Window x:Class="ORCA.NovaColunaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="NovaColunaWindow" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">

        <Border CornerRadius="12" Background="#0d1216" Padding="20">

            <StackPanel>

                <!-- Nome da Coluna -->

                <TextBlock Text="Nome da Coluna:" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <Border CornerRadius="8" Background="#fff8ef">

                    <TextBox x:Name="txtNomeColuna" 
                             Background="Transparent" 
                             Foreground="Black" 
                             BorderThickness="0" 
                             Padding="8"/>

                </Border>

                <!-- Tipo de Dado -->

                <TextBlock Text="Tipo de Dado:" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,15,0,5"/>

                <Border CornerRadius="8" Background="#0d1216">

                    <ComboBox x:Name="cmbTipoDado" 
                              Background="#fff8ef" 
                              Foreground="Black" 
                              BorderThickness="0" 
                              Padding="8" 
                              DropDownClosed="cmbTipoDado_DropDownClosed">

                        <ComboBoxItem Content="Texto"/>
                        <ComboBoxItem Content="Número"/>
                        <ComboBoxItem Content="Data"/>
                        <ComboBoxItem Content="Booleano"/>
                        
                    </ComboBox>
                    
                </Border>

                <!-- Operação -->
                
                <TextBlock x:Name="txtBlockOperacao" 
                           Text="Operação:" 
                           Foreground="#fff8ef" 
                           FontWeight="Bold" 
                           Visibility="Hidden"
                           Margin="0,15,0,5"/>
                
                <Border CornerRadius="8" Background="#0d1216" Visibility="Hidden">
                    
                    <ComboBox x:Name="txtOperacao" 
                              Background="Transparent" 
                              Foreground="#fff8ef" 
                              BorderThickness="0" 
                              Padding="8">
                        
                        <ComboBoxItem Content="Soma (+)"/>
                        <ComboBoxItem Content="Subtração (-)"/>
                        <ComboBoxItem Content="Multiplicação (X)"/>
                        <ComboBoxItem Content="Divisão (/)"/>
                        
                    </ComboBox>
                    
                </Border>

                <!-- Relacionamento -->
                <TextBlock x:Name="txtBlockRelacionamento" Text="Relacionamento com outra coluna:" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Visibility="Hidden"
                           Margin="0,15,0,5"/>
                
                <Border CornerRadius="8" Background="#0d1216" Visibility="Hidden">
                    
                    <ComboBox x:Name="txtRelacionamento" 
                              Background="Transparent" 
                              Foreground="White" 
                              BorderThickness="0" 
                              Padding="8">
                        
                        <ComboBoxItem Content="Soma (+)"/>
                        <ComboBoxItem Content="Subtração (-)"/>
                        <ComboBoxItem Content="Multiplicação (X)"/>
                        <ComboBoxItem Content="Divisão (/)"/>
                        
                    </ComboBox>
                    
                </Border>

                <!-- Botão -->
                
                <Button Content="Confirmar" 
                        Click="Confirmar_Click" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Margin="0,20,0,0" 
                        Padding="10"
                        Cursor="Hand">
                    
                    <Button.Template>
                        
                        <ControlTemplate TargetType="Button">
                            
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                               
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            </Border>
                            
                        </ControlTemplate>
                        
                    </Button.Template>
                    
                </Button>
                
            </StackPanel>
            
        </Border>

    </Grid>
    
</Window>
