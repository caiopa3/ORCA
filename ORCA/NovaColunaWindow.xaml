<Window x:Class="ORCA.NovaColunaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NovaColunaWindow" 
        Height="361" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Border CornerRadius="12" Background="#0d1216" Padding="20">
            <StackPanel>
                <!-- Nome da Coluna -->
                <TextBlock Text="Nome da Coluna:" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <Border CornerRadius="8" Background="#fff8ef">
                    <TextBox x:Name="txtNomeColuna" 
                             Background="Transparent" 
                             Foreground="Black" 
                             BorderThickness="0" 
                             Padding="8"/>
                </Border>

                <!-- Tipo de Dado -->
                <TextBlock Text="Tipo de Dado:" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,15,0,5"/>
                <Border CornerRadius="8" Background="#0d1216">
                    <ComboBox x:Name="cmbTipoDado" 
                              Background="#fff8ef" 
                              Foreground="Black" 
                              BorderThickness="0" 
                              Padding="8">
                        <ComboBoxItem Content="Texto"/>
                        <ComboBoxItem Content="Número"/>
                        <ComboBoxItem Content="Data"/>
                        <ComboBoxItem Content="Booleano"/>
                    </ComboBox>
                </Border>

                <!-- Checkbox para valor fixo -->
                <CheckBox x:Name="chkValorFixo"
                          Content="Definir valor fixo para esta coluna"
                          Foreground="White"
                          FontWeight="Bold"
                          Margin="0,15,0,5"
                          Checked="chkValorFixo_Checked"
                          Unchecked="chkValorFixo_Unchecked"/>

                <!-- TextBox para valor fixo, inicialmente oculto -->
                <Border x:Name="borderValorFixo" CornerRadius="8" Background="#fff8ef" Visibility="Collapsed">
                    <TextBox x:Name="txtValorFixo" 
                             Background="Transparent" 
                             Foreground="Black" 
                             BorderThickness="0" 
                             Padding="8"
                             />
                </Border>

                <!-- Botão -->
                <Button Content="Confirmar" 
                        Click="Confirmar_Click" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        Margin="0,20,0,0" 
                        Padding="10"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
