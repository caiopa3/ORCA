<Window x:Class="ORCA.gereFunc_adm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Background="#0d1216"
        Title="gereFunc_adm" Height="479" Width="972"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo do botão voltar -->
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#fff8ef"/>
            <Setter Property="Foreground" Value="#0d1216"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="80" Margin="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="24" Margin="0,4,0,3">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Path Data="M10,0 L0,10 L10,20"
                              Margin="4.5,0,0,0"
                              StrokeThickness="2"
                              Stretch="Fill" Width="14" Height="14" Stroke="#FF0D1216"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,28">

        <DataGrid x:Name="dgUsuarios"
                  Width="680"
                  Height="400"
                  Margin="10,10,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Background="#fff8ef">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="50"/>
                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="*"/>
                <DataGridTextColumn Header="Permissão" Binding="{Binding permissao}" Width="100"/>

                <!-- Botão Alterar -->
                <DataGridTemplateColumn Header="Alterar" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Alterar" Click="BtnAlterar_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Botão Excluir -->
                <DataGridTemplateColumn Header="Excluir" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Excluir" Click="BtnExcluir_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Botão Cadastrar -->
        <Button x:Name="btn_cad_func" 
         Content="Cadastrar Funcionário" 
                FontWeight="Bold"
         HorizontalAlignment="Left" 
         Margin="706,349,0,0" 
         VerticalAlignment="Top" 
         Width="196"
         Height="43"
         Click="btn_cad_func_Click">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#0d1216"
                     CornerRadius="10"
                     BorderBrush="#fff8ef"
                     BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RecognizesAccessKey="True"
                                   TextBlock.Foreground="#fff8ef"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">

                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <!-- Pressionado -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Botão Filtrar -->
        <Button x:Name="btn_fil_func" 
                FontWeight="Bold"
         Content="Filtrar Funcionário" 
         HorizontalAlignment="Left" 
         Margin="706,218,0,0" 
         VerticalAlignment="Top" 
         Width="196"
         Height="43"
         Click="btn_fil_func_Click"
         >

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#0d1216"
                     CornerRadius="10"
                     BorderBrush="#fff8ef"
                     BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RecognizesAccessKey="True"
                                   TextBlock.Foreground="#fff8ef"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2d2d2d"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <ComboBox x:Name="cmb_camp_func" HorizontalAlignment="Left" Margin="706,68,0,0" VerticalAlignment="Top" Width="196" Height="33"/>

        <Border 
        CornerRadius="5" 
        Background="#fff8ef" 
        Margin="706,148,0,0"
        Width="196"
        Height="43"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"/>


        <TextBox x:Name="txtFiltro" 
         HorizontalAlignment="Left" 
         Margin="715,153,0,0" 
         TextWrapping="Wrap" 
         Background="Transparent"
         BorderThickness="0"
         VerticalAlignment="Top" 
         Width="178"
         TextChanged="txtFiltro_TextChanged" Height="33"/>

        <!-- Texto explicativo 1 -->
        <TextBox 
        HorizontalAlignment="Left"
        Height="23"
        Margin="730,40,0,0"
        Width="148"
        Background="Transparent"
        BorderThickness="0"
        IsReadOnly="True"
        IsHitTestVisible="False"
        Text="Insira o campo desejado:"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Foreground="#fff8ef"
        FontWeight="Bold">

        </TextBox>

        <!-- Texto explicativo 2 -->
        <TextBox 
        HorizontalAlignment="Left"
        Height="23"
        Margin="722,123,0,0"
        Width="164"
        Background="Transparent"
        BorderThickness="0"
        IsReadOnly="True"
        IsHitTestVisible="False"
        Text="Digite o valor a ser filtrado:"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        Foreground="#fff8ef"
        FontWeight="Bold" TextChanged="TextBox_TextChanged_1" RenderTransformOrigin="0.501,0.51">

        </TextBox>

        <Button x:Name="btnVoltar"
        Style="{StaticResource VoltarButtonStyle}"
        Content=""
        Click="btnVoltar_Click"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,10,10,0"
        Width="40" Height="34"/>


    </Grid>
</Window>
