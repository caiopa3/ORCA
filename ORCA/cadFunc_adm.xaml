<Window x:Class="ORCA.cadFunc_adm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Background="#0d1216"
        Title="Cadastrar Funcionário"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- Estilo com cantos arredondados -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para MaskedTextBox -->
        <Style x:Key="RoundedMaskedTextBoxStyle" TargetType="xctk:MaskedTextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="xctk:MaskedTextBox">
                        <Border CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo do botão voltar -->
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#fff8ef"/>
            <Setter Property="Foreground" Value="#0d1216"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="80" Margin="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="24" Margin="0,4,0,3">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Path Data="M10,0 L0,10 L10,20"
                          Margin="4.5,0,0,0"
                          StrokeThickness="2"
                          Stretch="Fill" Width="14" Height="14" Stroke="#FF0D1216"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnVoltar"
                Style="{StaticResource VoltarButtonStyle}"
                Content=""
                Click="btnVoltar_Click"
                VerticalAlignment="Center"
                Margin="4,0,0,0"
                Width="40" Height="34"/>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Cadastrar Funcionário"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="4"
                   HorizontalAlignment="Center"/>

        <!-- Nome -->
        <TextBlock Grid.Row="1" Text="Nome completo:" Foreground="White" Margin="4,12,4,0"/>
        <TextBox x:Name="txtNomeCompleto" Grid.Row="1" Margin="4,28,4,4" Height="28"
                 Style="{StaticResource RoundedTextBoxStyle}"/>

        <!-- Email -->
        <TextBlock Grid.Row="2" Text="Email (login):" Foreground="White" Margin="4,12,4,0"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Margin="4,28,4,4" Height="28"
                 Style="{StaticResource RoundedTextBoxStyle}"/>

        <!-- Telefone -->
        <TextBlock Grid.Row="3" Text="Telefone:" Foreground="White" Margin="4,12,4,0"/>
        <xctk:MaskedTextBox x:Name="txtTelefone" Grid.Row="3" Margin="4,28,4,4"
                            Mask="(00) 00000-0000" PromptChar="_" Height="28"
                            Style="{StaticResource RoundedMaskedTextBoxStyle}"/>

        <!-- Senha -->
        <TextBlock Grid.Row="4" Text="Senha:" Foreground="White" Margin="4,12,4,0"/>
        <PasswordBox x:Name="txtSenha" Grid.Row="4" Margin="4,28,4,4" Height="28"
                     Style="{StaticResource RoundedPasswordBoxStyle}"/>

        <!-- Permissão -->
        <TextBlock Grid.Row="5" Text="Permissão:" Foreground="White" Margin="4,12,4,0"/>
        <ComboBox x:Name="cmbPermissao" Grid.Row="5" Margin="4,28,4,4" Height="28">
        </ComboBox>

        <!-- Documentos -->
        <GroupBox Header="Documentos" Grid.Row="6" Margin="4"
                  Foreground="White" Background="#0d1216" BorderBrush="#fff8ef">
            <StackPanel Margin="6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CPF:" Foreground="White" Width="60"/>
                    <xctk:MaskedTextBox x:Name="txtCPF" Width="180"
                                        Mask="000.000.000-00" PromptChar="_" Margin="4"
                                        Style="{StaticResource RoundedMaskedTextBoxStyle}"/>
                    <TextBlock Text="RG:" Foreground="White" Width="40" Margin="12,0,0,0"/>
                    <xctk:MaskedTextBox x:Name="txtRG" Width="100"
                                        Mask="00.000.000-0" PromptChar="_" Margin="4"
                                        Style="{StaticResource RoundedMaskedTextBoxStyle}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Botão -->
        <Button x:Name="btn_cad_func"
                Content="Cadastrar Funcionário"
                Grid.Row="7"
                Margin="4"
                Height="44"
                Click="btn_cad_func_Click"
                FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            Background="#0d1216"
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#fff8ef" Margin="2">
                        <ContentPresenter x:Name="content"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="#fff8ef"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                            <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
