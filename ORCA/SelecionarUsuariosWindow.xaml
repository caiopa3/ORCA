<Window x:Class="ORCA.SelecionarUsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="Selecionar Usuários"
        Height="500"
        Width="318"
        Background="#fff8ef"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo de botão (padrão escuro com hover invertido) -->
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="143"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="#0d1216"
                            CornerRadius="8"
                            BorderBrush="#fff8ef"
                            BorderThickness="2">
                            <ContentPresenter x:Name="content"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="#fff8ef"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <!-- Elemento claro -->
        <Border Background="#0d1216" CornerRadius="10" Padding="10" Grid.RowSpan="2">
            <StackPanel>
                <TextBlock Text="Selecione os usuários que poderão usar este modelo:" 
                           Foreground="#fff8ef" 
                           Margin="0,0,0,10" 
                           FontWeight="Bold"
                           TextWrapping="Wrap" Width="277"/>

                <ListBox x:Name="listaUsuarios"
                         SelectionMode="Multiple"
                         DisplayMemberPath="Email"
                         Height="250"
                         Background="WhiteSmoke"
                         BorderBrush="#0d1216"
                         BorderThickness="2"
                         Foreground="#0d1216">

                </ListBox>

                <!-- Botão escuro com efeito hover -->
                <Button Content="Confirmar"
        Width="258"
        Height="35"
        HorizontalAlignment="Center"
        Margin="0,10,0,0"
        Click="Confirmar_Click"
        FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                    Background="Transparent"
                    CornerRadius="8"
                    BorderBrush="#fff8ef"
                    BorderThickness="2">
                                <ContentPresenter x:Name="content"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  TextBlock.Foreground="#fff8ef"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- Hover com animação -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#0d1216"
                                                Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="content"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="#fff8ef"
                                                Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="Transparent"
                                                Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="content"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="#0d1216"
                                                Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>

                                <!-- Pressionado -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1a1f23"/>
                                    <Setter TargetName="content" Property="TextBlock.Foreground" Value="#fff8ef"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>

        <!-- Botão Voltar -->
        <Button Name="btnVoltar"
        Content="Voltar"
        Style="{StaticResource DefaultButtonStyle}"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,355,0,0"
        Click="btnVoltar_Click" Width="260"/>
    </Grid>
</Window>
