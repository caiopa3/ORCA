<Window x:Class="ORCA.PerfilWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meu Perfil"
        Height="520" Width="430"
        WindowStartupLocation="CenterScreen"
        Background="#0d1216"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo do botão voltar -->
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#fff8ef"/>
            <Setter Property="Foreground" Value="#0d1216"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="80" Margin="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="24" Margin="0,4,0,3">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Path Data="M10,0 L0,10 L10,20"
                                      Margin="4.5,0,0,0"
                                      StrokeThickness="2"
                                      Stretch="Fill" Width="14" Height="14" Stroke="#FF0D1216"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <!-- Botão Voltar -->
        <Button x:Name="btnVoltar"
                Style="{StaticResource VoltarButtonStyle}"
                Content=""
                Click="btnVoltar_Click"
                DockPanel.Dock="Top" Height="25"
                Margin="10,5,10,10"/>

        <!-- Conteúdo principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0" Orientation="Vertical" VerticalAlignment="Top">

                <!-- EMAIL ATUAL -->
                <TextBlock Text="Email atual:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,10,0,4"/>
                <Border Background="#fff8ef" CornerRadius="8">
                    <TextBox x:Name="txtEmail"
                             Background="Transparent"
                             Foreground="Black"
                             Padding="8"
                             Height="30"
                             BorderThickness="0"
                             IsReadOnly="True"/>
                </Border>

                <!-- CONFIRMAR EMAIL -->
                <TextBlock Text="Confirmar Email:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,10,0,4"/>
                <Border Background="#fff8ef" CornerRadius="8">
                    <TextBox x:Name="txtConfirmarEmail"
                             Background="Transparent"
                             Foreground="Black"
                             Padding="8"
                             Height="30"
                             BorderThickness="0"/>
                </Border>

                <!-- CHECKBOX -->
                <CheckBox x:Name="chkAtualizarEmail"
                          Content="Atualizar email?"
                          Foreground="#fff8ef"
                          BorderThickness="0"
                          FontSize="14"
                          FontWeight="Bold"
                          Margin="0,10,0,4"
                          Checked="chkAtualizarEmail_Checked"
                          Unchecked="chkAtualizarEmail_Unchecked"/>

                <!-- NOVO EMAIL (OCULTO) -->
                <StackPanel x:Name="panelNovoEmail" Visibility="Collapsed">
                    <TextBlock Text="Novo Email:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,10,0,4"/>
                    <Border Background="#fff8ef" CornerRadius="8">
                        <TextBox x:Name="txtNovoEmail"
                                 Background="Transparent"
                                 Foreground="Black"
                                 Padding="8"
                                 Height="30"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- SENHA ATUAL -->
                <TextBlock Text="Senha atual:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,20,0,4"/>
                <Border Background="#fff8ef" CornerRadius="8">
                    <PasswordBox x:Name="txtSenhaAtual"
                                 Background="Transparent"
                                 Padding="8"
                                 Height="30"
                                 BorderThickness="0"/>
                </Border>

                <!-- NOVA SENHA -->
                <TextBlock Text="Nova senha:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,10,0,4"/>
                <Border Background="#fff8ef" CornerRadius="8">
                    <PasswordBox x:Name="txtNovaSenha"
                                 Background="Transparent"
                                 Padding="8"
                                 Height="30"
                                 BorderThickness="0"/>
                </Border>

                <!-- CONFIRMAR NOVA SENHA -->
                <TextBlock Text="Confirmar nova senha:" Foreground="#fff8ef" FontSize="14" FontWeight="Bold" Margin="0,10,0,4"/>
                <Border Background="#fff8ef" CornerRadius="8">
                    <PasswordBox x:Name="txtConfirmarSenha"
                                 Background="Transparent"
                                 Padding="8"
                                 Height="30"
                                 BorderThickness="0"/>
                </Border>

                <!-- BOTÃO SALVAR -->
                <Button Content="Salvar Alterações" Height="40" FontWeight="Bold" Margin="0,20,0,20" Cursor="Hand" Click="BtnSalvar_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#0d1216" CornerRadius="10" BorderThickness="2" BorderBrush="#fff8ef">
                                <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="#fff8ef"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#fff8ef" Duration="0:0:0.3"/>
                                                <ColorAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#0d1216" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#0d1216" Duration="0:0:0.3"/>
                                                <ColorAnimation Storyboard.TargetName="content" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#fff8ef" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1a1f23"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
