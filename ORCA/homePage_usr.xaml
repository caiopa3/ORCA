<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="ORCA.homePage_usr"
        Title="Orçamentos"  
        Height="720" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#171717"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1e2a33"/>
            <Setter Property="Foreground" Value="#fff8ef"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                                <Path Data="M10,0 L0,10 L10,20" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#0D1113" CornerRadius="14" Margin="24"
                Padding="14">



        <Grid>

            <!-- Container creme dentro do frame -->

            <Border Background="#fff8ef" 
                    CornerRadius="10" 
                    Padding="12" 
                    Margin="0,50,0,0">

                <Grid>

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="483*"/>
                        <ColumnDefinition Width="166*"/>
                        <ColumnDefinition Width="351*"/>

                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="84"/>

                        <!-- header -->

                        <RowDefinition Height="*"/>

                        <!-- content -->

                    </Grid.RowDefinitions>

                    <!-- ===== header (faixa escura dentro do creme) ===== -->
                    <Border Grid.Row="0" 
                            Background="#0B1113" 
                            CornerRadius="30"
                            VerticalAlignment="Top" 
                            Margin="8,8,8,0" 
                            Padding="12" 
                            Grid.ColumnSpan="3">

                        <Grid>

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>

                            <!-- Espaço vazio à esquerda (apenas margem) -->

                            <StackPanel 
                                Orientation="Horizontal" 
                                Grid.Column="0" 
                                VerticalAlignment="Center" 
                                Margin="6,0,8,0">

                                <!-- opcional: logo pequeno -->

                            </StackPanel>

                            <!-- Search box -->

                            <Border Grid.Column="1" 
                                    HorizontalAlignment="Left"
                                    Background="#FBF7F4" 
                                    BorderBrush="#0B1113" 
                                    BorderThickness="2"
                                    CornerRadius="20" 
                                    Height="36" 
                                    Width="520" 
                                    VerticalAlignment="Center">

                                <Grid>

                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="36"/>

                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="txtSearch" 
                                             Grid.Column="0" 
                                             Background="Transparent"
                                             BorderThickness="0" 
                                             VerticalContentAlignment="Center"
                                             Margin="12,0" 
                                             FontSize="13" 
                                             Foreground="#222"
                                             Text="" TextChanged="txtSearch_TextChanged" />

                                    <TextBlock Text="🔍" 
                                               FontSize="15" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Background="Transparent" 
                                               Grid.Column="1" PreviewMouseDown="TextBlock_PreviewMouseDown" />

                                </Grid>

                            </Border>

                            <!-- criar button -->

                            <Button x:Name="btnCriar" 
                                    Grid.Column="2" 
                                    Width="84" 
                                    Height="32"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center" 
                                    Margin="12,0,6,0"
                                    Cursor="Hand" 
                                    Click="BtnCriarOrcamento_Click">

                                <Button.Template>

                                    <ControlTemplate TargetType="{x:Type Button}">

                                        <Border x:Name="bd" CornerRadius="16" 
                                                BorderThickness="1.6"
                                                BorderBrush="#3CB86F" 
                                                Background="#0B1113" 
                                                Padding="6,2">

                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />

                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <Trigger Property="IsMouseOver" Value="True">

                                                <Setter TargetName="bd" Property="Background" Value="#3CB86F"/>
                                                <Setter Property="Foreground" Value="White"/>

                                            </Trigger>

                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>

                                </Button.Template>

                                <TextBlock Text="criar" Foreground="#AEE0B4" FontWeight="Bold"/>

                            </Button>

                            <!-- criar button -->
                            <Button x:Name="btnPerfil" 
                                Grid.Column="2" 
                                Width="36" 
                                Height="36"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Margin="110,0,100,0"
                                Cursor="Hand"
                                Click="BtnPerfil_Click">

                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bd" CornerRadius="18"
                                            BorderThickness="1.6"
                                            BorderBrush="#3CB86F"
                                            Background="#0B1113"
                                            Padding="4">

                                            <TextBlock Text="👤" 
                                               FontSize="18"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Foreground="#AEE0B4"/>

                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <Trigger Property="IsMouseOver" Value="True">

                                                <Setter TargetName="bd" Property="Background" Value="#3CB86F"/>

                                                <Setter Property="Foreground" Value="White"/>

                                            </Trigger>

                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>

                                </Button.Template>

                            </Button>

                        </Grid>

                    </Border>

                    <!-- Avatar circular sobreposto (posição relativa ao container) -->

                    <!-- ===== main content area (escuro) ===== -->
                    <Border Grid.Row="1" 
                            Background="#0D1214" 
                            CornerRadius="10"
                            Margin="8,18,8,8" 
                            Padding="12" 
                            Grid.ColumnSpan="3">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <!-- painel que conterá os cards -->

                            <WrapPanel x:Name="wrapPanelOrcamentos" 
                                       Orientation="Horizontal" 
                                       ItemHeight="140" 
                                       ItemWidth="200"
                                       Margin="6" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" />

                        </ScrollViewer>

                    </Border>

                </Grid>

            </Border>

            <Button x:Name="btnVoltar"
            Style="{StaticResource VoltarButtonStyle}"
            Content="Página Inicial"
            Click="btnVoltar_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="120" Height="34" Margin="0,10,0,0"/>

        </Grid>

    </Border>

</Window>