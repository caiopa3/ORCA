<Window x:Class="ORCA.homePage_usr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orçamentos"  
        Height="720" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#171717">

    <Border Background="#0D1113" CornerRadius="14" Margin="24"
                Padding="14">

        <Grid>
            
            <!-- Container creme dentro do frame -->
            
            <Border Background="#fff8ef" 
                    CornerRadius="10" 
                    Padding="12" 
                    Margin="0,50,0,0">
                
                <Grid>
                    
                    <Grid.ColumnDefinitions>
                        
                        <ColumnDefinition Width="483*"/>
                        <ColumnDefinition Width="166*"/>
                        <ColumnDefinition Width="351*"/>
                        
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        
                        <RowDefinition Height="84"/>
                        
                        <!-- header -->
                        
                        <RowDefinition Height="*"/>
                        
                        <!-- content -->
                        
                    </Grid.RowDefinitions>

                    <!-- ===== header (faixa escura dentro do creme) ===== -->
                    <Border Grid.Row="0" 
                            Background="#0B1113" 
                            CornerRadius="30"
                            VerticalAlignment="Top" 
                            Margin="8,8,8,0" 
                            Padding="12" 
                            Grid.ColumnSpan="3">
                        
                        <Grid>
                            
                            <Grid.ColumnDefinitions>
                                
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                
                            </Grid.ColumnDefinitions>

                            <!-- Espaço vazio à esquerda (apenas margem) -->
                            
                            <StackPanel 
                                Orientation="Horizontal" 
                                Grid.Column="0" 
                                VerticalAlignment="Center" 
                                Margin="6,0,8,0">
                                
                                <!-- opcional: logo pequeno -->
                                
                            </StackPanel>

                            <!-- Search box -->
                            
                            <Border Grid.Column="1" 
                                    HorizontalAlignment="Left"
                                    Background="#FBF7F4" 
                                    BorderBrush="#0B1113" 
                                    BorderThickness="2"
                                    CornerRadius="20" 
                                    Height="36" 
                                    Width="520" 
                                    VerticalAlignment="Center">
                                
                                <Grid>
                                    
                                    <Grid.ColumnDefinitions>
                                        
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="36"/>
                                        
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="txtSearch" 
                                             Grid.Column="0" 
                                             Background="Transparent"
                                             BorderThickness="0" 
                                             VerticalContentAlignment="Center"
                                             Margin="12,0" 
                                             FontSize="13" 
                                             Foreground="#222"
                                             Text="" />
                                    
                                    <TextBlock Text="🔍" 
                                               FontSize="15" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Background="Transparent" 
                                               Grid.Column="1" />
                                    
                                </Grid>
                                
                            </Border>

                            <!-- criar button -->
                            
                            <Button x:Name="btnCriar" 
                                    Grid.Column="2" 
                                    Width="84" 
                                    Height="32"
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center" 
                                    Margin="12,0,6,0"
                                    Cursor="Hand" 
                                    Click="BtnCriarOrcamento_Click">
                                
                                <Button.Template>
                                    
                                    <ControlTemplate TargetType="Button">
                                        
                                        <Border x:Name="bd" CornerRadius="16" 
                                                BorderThickness="1.6"
                                                BorderBrush="#3CB86F" 
                                                Background="#0B1113" 
                                                Padding="6,2">
                                            
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            
                                        </Border>
                                        
                                        <ControlTemplate.Triggers>
                                            
                                            <Trigger Property="IsMouseOver" Value="True">

                                                <Setter TargetName="bd" Property="Background" Value="#3CB86F"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                
                                            </Trigger>
                                            
                                        </ControlTemplate.Triggers>
                                        
                                    </ControlTemplate>
                                    
                                </Button.Template>
                                
                                <TextBlock Text="criar" Foreground="#AEE0B4" FontWeight="Bold"/>
                                
                            </Button>
                            
                        </Grid>
                        
                    </Border>

                    <!-- Avatar circular sobreposto (posição relativa ao container) -->

                    <!-- ===== main content area (escuro) ===== -->
                    <Border Grid.Row="1" 
                            Background="#0D1214" 
                            CornerRadius="10"
                            Margin="8,18,8,8" 
                            Padding="12" 
                            Grid.ColumnSpan="3">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <!-- painel que conterá os cards -->

                            <WrapPanel x:Name="wrapPanelOrcamentos" 
                                       Orientation="Horizontal" 
                                       ItemHeight="140" 
                                       ItemWidth="200"
                                       Margin="6" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" />

                        </ScrollViewer>

                    </Border>
                    
                </Grid>
                
            </Border>
            
        </Grid>
        
    </Border>

</Window>
