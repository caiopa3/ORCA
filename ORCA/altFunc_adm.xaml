<Window x:Class="ORCA.altFunc_adm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Alterar Funcionário"
        Height="600"
        Width="700"
        Background="#0d1216"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="RoundedMaskedTextBoxStyle" TargetType="xctk:MaskedTextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="xctk:MaskedTextBox">
                        <Border CornerRadius="8"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo do botão voltar -->
        <Style x:Key="VoltarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#fff8ef"/>
            <Setter Property="Foreground" Value="#0d1216"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="80" Margin="0,0,1,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="24" Margin="0,4,0,3">
                                <ContentPresenter VerticalAlignment="Center"/>
                                <Path Data="M10,0 L0,10 L10,20"
                          Margin="4.5,0,0,0"
                          StrokeThickness="2"
                          Stretch="Fill" Width="14" Height="14" Stroke="#FF0D1216"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2c3a44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnVoltar"
                Style="{StaticResource VoltarButtonStyle}"
                Content=""
                Click="btnVoltar_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="6,0,0,0"
                Width="40" Height="34"/>

        <!-- Título -->
        <TextBlock Text="Alterar Dados do Funcionário"
                   Foreground="#fff8ef"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,0,0,10">
            <!-- Nome Completo -->
            <TextBlock Text="Nome Completo" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtNomeCompleto"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Black"/>
            </Border>

            <!-- Email (não editável) -->
            <TextBlock Text="E-mail" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtEmail"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Gray"
                         IsReadOnly="True"/>
            </Border>

            <!-- Telefone -->
            <TextBlock Text="Telefone" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <xctk:MaskedTextBox x:Name="txtTelefone"
                        Mask="(00) 00000-0000"
                        PromptChar="_"
                        BorderThickness="0"
                        Background="Transparent"
                        Padding="8"
                        Height="30"
                        Foreground="Black"/>
            </Border>

            <!-- CPF -->
            <TextBlock Text="CPF" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <xctk:MaskedTextBox x:Name="txtCPF"
                        Mask="000.000.000-00"
                        PromptChar="_"
                        BorderThickness="0"
                        Background="Transparent"
                        Padding="8"
                        Height="30"
                        Foreground="Black"/>
            </Border>

            <!-- RG -->
            <TextBlock Text="RG" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <xctk:MaskedTextBox x:Name="txtRG"
                        Mask="00.000.000-0"
                        PromptChar="_"
                        BorderThickness="0"
                        Background="Transparent"
                        Padding="8"
                        Height="30"
                        Foreground="Black"/>
            </Border>


            <!-- Permissão -->
            <TextBlock Text="Permissão" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,20">
                <ComboBox x:Name="cmbPermissao"
                          Background="Transparent"
                          BorderThickness="0"
                          Height="30"
                          Padding="8">
                </ComboBox>
            </Border>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <!-- Botão Salvar -->
                <Button x:Name="btnSalvar"
                        Content="Salvar Alterações"
                        Width="660"
                        Height="60"
                        Margin="10,0"
                        Click="btnSalvar_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                            Background="#0d1216"
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#fff8ef" Margin="2">
                                <ContentPresenter x:Name="content"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="#fff8ef"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                                    <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
