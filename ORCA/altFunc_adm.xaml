<Window x:Class="ORCA.altFunc_adm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Alterar Funcionário"
        Height="600"
        Width="700"
        Background="#0d1216"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Alterar Dados do Funcionário"
                   Foreground="#fff8ef"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,0,0,10">
            <!-- Nome Completo -->
            <TextBlock Text="Nome Completo" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtNomeCompleto"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Black"/>
            </Border>

            <!-- Email (não editável) -->
            <TextBlock Text="E-mail" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtEmail"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Gray"
                         IsReadOnly="True"/>
            </Border>

            <!-- Telefone -->
            <TextBlock Text="Telefone" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtTelefone"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Black"/>
            </Border>

            <!-- CPF -->
            <TextBlock Text="CPF" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtCPF"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Black"/>
            </Border>

            <!-- RG -->
            <TextBlock Text="RG" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,10">
                <TextBox x:Name="txtRG"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="8"
                         Height="30"
                         Foreground="Black"/>
            </Border>

            <!-- Permissão -->
            <TextBlock Text="Permissão" Foreground="#fff8ef" Margin="0,0,0,4"/>
            <Border CornerRadius="10" Background="#fff8ef" Margin="0,0,0,20">
                <ComboBox x:Name="cmbPermissao"
                          Background="Transparent"
                          BorderThickness="0"
                          Height="30"
                          Padding="8">
                </ComboBox>
            </Border>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <!-- Botão Salvar -->
                <Button x:Name="btnSalvar"
                        Content="Salvar Alterações"
                        Width="660"
                        Height="60"
                        Margin="10,0"
                        Click="btnSalvar_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border"
                            Background="#0d1216"
                            CornerRadius="10"
                            BorderThickness="2"
                            BorderBrush="#fff8ef" Margin="2">
                                <ContentPresenter x:Name="content"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="#fff8ef"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                                    <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
