<Window x:Class="ORCA.PdfContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="PdfContentWindow"
        Height="450" Width="800"
        Background="#0d1216"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo de botão (padrão escuro com hover invertido) -->
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="143"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#0d1216"
                                CornerRadius="8"
                                BorderBrush="#fff8ef"
                                BorderThickness="2">
                            <ContentPresenter x:Name="content"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#fff8ef"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- Caixa de texto centralizada -->
        <Border CornerRadius="8"
                Background="#fff8ef"
                Padding="4"
                Margin="0,40,0,70">
            <TextBox Name="TxtPdfContent"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     FontSize="14"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#0d1216"
                     Text="Digite aqui o conteúdo..."/>
        </Border>

        <!-- Botão Voltar -->
        <Button Name="btnVoltar"
                Content="Voltar"
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,15"
                Click="btnVoltar_Click"/>

        <!-- Botão Gerar PDF -->
        <Button Name="BtnGeneratePdf"
                Content="Gerar PDF"
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,0,15"
                Click="BtnGeneratePdf_Click"/>
    </Grid>
</Window>
