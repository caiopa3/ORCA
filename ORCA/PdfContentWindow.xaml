<Window x:Class="ORCA.PdfContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="PdfContentWindow" Height="450" Width="800">
    <Grid Margin="10">
        <TextBox Name="TxtPdfContent" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
             TextWrapping="Wrap" AcceptsReturn="True" FontSize="14" Text="Digite aqui o conteúdo..."/>
        <Button Name="BtnGeneratePdf" Content="Gerar PDF" Width="120" Height="30"
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="BtnGeneratePdf_Click"/>
    </Grid>
</Window>
