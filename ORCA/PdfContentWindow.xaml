<Window x:Class="ORCA.PdfContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="PdfContentWindow"
        Height="450" Width="800"
        Background="#0d1216"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <!-- TextBox com fundo claro e borda arredondada -->
        <Border CornerRadius="8" Background="#fff8ef" Padding="4" Margin="0,0,0,50">
            <TextBox Name="TxtPdfContent"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     FontSize="14"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#0d1216"
                     Text="Digite aqui o conteúdo..."/>
        </Border>

        <!-- Botão escuro com efeito hover -->
        <Button Name="BtnGeneratePdf"
                Content="Gerar PDF"
                Width="143"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,0,4"
                Click="BtnGeneratePdf_Click"
                FontWeight="Bold">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="#0d1216"
                            CornerRadius="8"
                            BorderBrush="#fff8ef"
                            BorderThickness="2">
                        <ContentPresenter x:Name="content"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="#fff8ef"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                            <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
