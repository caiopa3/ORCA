<Window x:Class="ORCA.gerar_pdf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORCA"
        mc:Ignorable="d"
        Title="gerar_pdf" Height="450" Width="800">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Botões para carregar imagens -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="BtnLoadHeader" Content="Carregar Cabeçalho" Width="150" Margin="10" Click="BtnLoadHeader_Click"/>
            <Button x:Name="BtnLoadFooter" Content="Carregar Rodapé" Width="150" Margin="10" Click="BtnLoadFooter_Click"/>
        </StackPanel>

        <!-- Pré-visualização -->
        <Grid Grid.Row="1" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Cabeçalho" Margin="10">
                <Image x:Name="ImgHeader" Stretch="Uniform" Height="120"/>
            </GroupBox>

            <GroupBox Header="Rodapé" Margin="10" Grid.Column="1">
                <Image x:Name="ImgFooter" Stretch="Uniform" Height="120"/>
            </GroupBox>
        </Grid>

        <!-- Exportar PDF -->
        <Button x:Name="BtnExportPdf" Content="Exportar PDF"
        Grid.Row="2" Width="200" Height="40"
        HorizontalAlignment="Center" Margin="10"
        Background="#FF2E7D32" Foreground="White" FontWeight="Bold" Click="BtnExportPdf_Click"/>
    </Grid>
</Window>
