<Window x:Class="ORCA.SelecionarModeloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecionar Modelo"  
        Height="250" 
        Width="400"
        Background="#0d1216"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="10" Background="#0d1216" Padding="15" Margin="0,0,0,-37">
        
        <StackPanel>

            <!-- Título -->
            <TextBlock Text="Selecione um modelo de orçamento:"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#fff8ef"
                       Margin="0,0,0,12"/>

            <!-- Lista de modelos -->
            
            <ListBox x:Name="listModelos"
                     DisplayMemberPath="Nome"
                     Background="#fff8ef"
                     BorderBrush="#0d1216"
                     BorderThickness="1"
                     Height="140"
                     Padding="5"
                     />

            <!-- Botão de confirmar -->
            
            <Button Content="Confirmar"
                    Width="120"
                    Height="35"
                    Background="#fff8ef"
                    Foreground="#0d1216"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0"
                    Click="BtnConfirmar_Click"
                    />

        </StackPanel>
        
    </Border>

</Window>