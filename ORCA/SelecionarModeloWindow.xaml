<Window x:Class="ORCA.SelecionarModeloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecionar Modelo"  
        Height="420" 
        Width="500"
        Background="#0d1216"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo padrão dos botões (escuro com hover branco) -->
        <Style x:Key="DefaultButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="460"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#0d1216"
                                CornerRadius="10"
                                BorderBrush="#fff8ef"
                                BorderThickness="2">
                            <ContentPresenter x:Name="content"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.Foreground="#fff8ef"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#fff8ef"/>
                                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e0e0e0"/>
                                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#0d1216"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">

        <!-- Container branco -->
        <Border Background="#fff8ef" CornerRadius="10" Padding="15">
            <StackPanel VerticalAlignment="Top" Margin="-15,0,-15,0">

                <!-- Título -->
                <TextBlock Text="Selecione um modelo de orçamento:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#0d1216"
                           Margin="0,0,0,12" Width="275"/>

                <!-- Lista de modelos -->
                <Border Background="#fff8ef" CornerRadius="10" Padding="5" BorderBrush="#0d1216" BorderThickness="2" Height="181" Width="443">
                    <ListBox x:Name="listModelos"
                             DisplayMemberPath="Nome"
                             Background="#fff8ef"
                             BorderThickness="0" Margin="3,3,3,3"/>
                </Border>

                <!-- Botão Confirmar -->
                <Button Content="Confirmar"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="0,15,0,10"
                        Click="BtnConfirmar_Click"/>
                <Button Content="Voltar"
                        Style="{StaticResource DefaultButtonStyle}"
                        Click="BtnVoltar_Click"/>

                <!-- Botão Voltar -->

            </StackPanel>
        </Border>

    </Grid>
</Window>
