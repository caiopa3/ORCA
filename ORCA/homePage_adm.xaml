<Window x:Class="ORCA.homePage_adm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orçamentos - Admin"  
        Height="720" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#171717">

    <Border Background="#0D1113" CornerRadius="14" Margin="24"
            Padding="14">

        <Grid>

            <!-- Container creme dentro do frame -->
            <Border Background="#fff8ef" 
                    CornerRadius="10" 
                    Padding="12" 
                    Margin="0,50,0,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="483*"/>
                        <ColumnDefinition Width="166*"/>
                        <ColumnDefinition Width="351*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="84"/>
                        <!-- header -->
                        <RowDefinition Height="*"/>
                        <!-- content -->
                    </Grid.RowDefinitions>

                    <!-- ===== header (faixa escura dentro do creme) ===== -->
                    <Border Grid.Row="0" 
                            Background="#0B1113" 
                            CornerRadius="30"
                            VerticalAlignment="Top" 
                            Margin="8,8,8,0" 
                            Padding="12" 
                            Grid.ColumnSpan="3">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search box -->
                            <Border Grid.Column="1" 
                                    HorizontalAlignment="Left"
                                    Background="#FBF7F4" 
                                    BorderBrush="#0B1113" 
                                    BorderThickness="2"
                                    CornerRadius="20" 
                                    Height="36" 
                                    Width="520" 
                                    VerticalAlignment="Center">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="36"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="txtSearch" 
                                             Grid.Column="0" 
                                             Background="Transparent"
                                             BorderThickness="0" 
                                             VerticalContentAlignment="Center"
                                             Margin="12,0" 
                                             FontSize="13" 
                                             Foreground="#222"
                                             Text="" />

                                    <TextBlock Text="🔍" 
                                               FontSize="15" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Background="Transparent" 
                                               Grid.Column="1"/>
                                </Grid>
                            </Border>

                            <!-- botões à direita -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center">
                                <!-- Criar Orçamento -->
                                <Button x:Name="btnCriar" 
                                        Width="94" Height="33"
                                        Cursor="Hand"
                                        Click="Button_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="bd" CornerRadius="16" 
                                                    BorderThickness="1.6"
                                                    BorderBrush="#3CB86F" 
                                                    Background="Transparent" 
                                                    Padding="6,2">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bd" Property="Background" Value="#3CB86F"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="bd" Property="Background" Value="#2D8A56"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="Criar" Foreground="#AEE0B4" FontWeight="Bold"/>
                                </Button>
                                <!-- Perfil -->




                                <!-- Gerenciar Funcionários -->
                                <Button x:Name="btnGerenciar" 
                                        Width="160" Height="32"
                                        Cursor="Hand"
                                        Margin="0,0,15,0"
                                        Click="btn_ger_func_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="bd" CornerRadius="16" 
                                                    BorderThickness="1.6"
                                                    BorderBrush="#007ACC" 
                                                    Background="Transparent" 
                                                    Padding="6,2">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bd" Property="Background" Value="#007ACC"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="bd" Property="Background" Value="#005A99"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <TextBlock Text="Gerenciar Funcionários" Foreground="#A9C7E8" FontWeight="Bold"/>
                                </Button>

                                <!-- Perfil -->

                            </StackPanel>
                            <Button x:Name="btnPerfil"
                                        Cursor="Hand"
                                        Grid.Column="1" Margin="634,2,5,1" RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="-1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bd" CornerRadius="18"
                                                    BorderThickness="1.6"
                                                    BorderBrush="#3CB86F"
                                                    Background="Transparent"
                                                    Padding="4">
                                            <TextBlock Text="👤" 
                                                           FontSize="18"
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" 
                                                           Foreground="#AEE0B4"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#3CB86F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#2D8A56"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="btn_ger_func" Click="btn_ger_func_Click" Cursor="Hand" Grid.Column="1" Margin="707,2,5,1">
                                <Button.Template
                                >
                                    <ControlTemplate
                                TargetType="{x:Type Button}">
                                        <Border
                                Padding="6,2" x:Name="bd" CornerRadius="16" BorderThickness="1.6" BorderBrush="#007ACC" Background="Transparent">
                                            <ContentPresenter
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers
                                >
                                            <Trigger
                                Property="IsMouseOver" Value="True">
                                                <Setter
                                Property="Background" TargetName="bd" Value="#007ACC"/>
                                                <Setter
                                Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger
                                Property="IsPressed" Value="True">
                                                <Setter
                                Property="Background" TargetName="bd" Value="#005A99"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                                <TextBlock
                                Foreground="#A9C7E8" FontWeight="Bold" Text="Gerenciar Funcionários"/>
                            </Button>

                        </Grid>
                    </Border>

                    <!-- ===== main content area (escuro) ===== -->
                    <Border Grid.Row="1" 
                            Background="#0D1214" 
                            CornerRadius="10"
                            Margin="8,18,8,8" 
                            Padding="12" 
                            Grid.ColumnSpan="3">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <WrapPanel x:Name="wrapPanelOrcamentos" 
                                       Orientation="Horizontal" 
                                       ItemHeight="140" 
                                       ItemWidth="200"
                                       Margin="6" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" />
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
